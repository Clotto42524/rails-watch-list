<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://pyxis.nymag.com/v1/imgs/978/4d0/4b4779e1dcb86984abe55c08366f9babe7-13-empty-theater.2x.rhorizontal.w700.jpg);">
  <div class="container">
    <h1>Save any kind of movie</h1>
    <%= link_to "Add new list", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= list.name%></h5>
          <%= link_to "List details", list_path(list.id), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
