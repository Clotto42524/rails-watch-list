<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @list.movies.each do |movie| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= movie.overview %></h6>
          <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= bookmark.comment %>
          <p class="card-text"><%= "Rating: #{movie.rating}" %></p>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success mt-2" %></p>

  <p><%= link_to "Back to list", lists_path %></p>
</div>
